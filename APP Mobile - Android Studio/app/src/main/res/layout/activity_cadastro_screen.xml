<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroScreen" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="254dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CADASTRO DE VEÍCULO:"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:text="Marca:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/inputMarca"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:text="Modelo:" />

                <EditText
                    android:id="@+id/inputModelo"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:text="Placa:" />

                <EditText
                    android:id="@+id/inputPlaca"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:text="Cor:" />

                <EditText
                    android:id="@+id/inputCor"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="330dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CADASTRO DE MOTORISTA:"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelNome"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="Nome:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/inputNome"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelCNH"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:text="CNH:" />

                <EditText
                    android:id="@+id/inputCNH"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelCPF"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:text="CPF:" />

                <EditText
                    android:id="@+id/inputCPF"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelEndereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço:" />

                <EditText
                    android:id="@+id/inputEndereco"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="textImeMultiLine" />
            </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="149dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginVertical="30dp"
                android:text="Cadastrar" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>